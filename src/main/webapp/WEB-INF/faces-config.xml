<?xml version="1.0" encoding="UTF-8"?>
<faces-config
    xmlns="http://xmlns.jcp.org/xml/ns/javaee"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-facesconfig_2_2.xsd"
    version="2.2">
   
   <navigation-rule>
   		<display-name>registration.xhtml</display-name>
   		<from-view-id>/registration/registration.xhtml</from-view-id>
   		<navigation-case>
   			<from-outcome>registration_failure</from-outcome>
   			<to-view-id>/registration/registration.xhtml</to-view-id>
   		</navigation-case>
   </navigation-rule>
   
   <navigation-rule>
   		<display-name>registration.xhtml</display-name>
   		<from-view-id>/registration/registration.xhtml</from-view-id>
   		<navigation-case>
   			<from-outcome>registration_success</from-outcome>
   			<to-view-id>/registration/registration_success.xhtml</to-view-id>
   		</navigation-case>
   </navigation-rule>
   
   <navigation-rule>
   		<from-view-id>*</from-view-id>
   		<navigation-case>
   			<from-outcome>login_success</from-outcome>
   			<to-view-id>/portal/welcome.xhtml</to-view-id>
   		</navigation-case>
   </navigation-rule>
   
    <navigation-rule>
   		<from-view-id>*</from-view-id>
   		<navigation-case>
   			<from-outcome>login_failure</from-outcome>
   			<to-view-id>/index.xhtml</to-view-id>
   		</navigation-case>
   </navigation-rule>
   
    <navigation-rule>
   		<from-view-id>*</from-view-id>
   		<navigation-case>
   			<from-outcome>logout_success</from-outcome>
   			<to-view-id>/index.xhtml</to-view-id>
   		</navigation-case>
   </navigation-rule>
   
   <navigation-rule>
   		<from-view-id>*</from-view-id>
   		<navigation-case>
   			<from-outcome>logout_failure</from-outcome>
   			<to-view-id>/index.xhtml</to-view-id>
   		</navigation-case>
   </navigation-rule>
   
   <navigation-rule>
   		<from-view-id>*</from-view-id>
   		<navigation-case>
   			<from-outcome>to_registration</from-outcome>
   			<to-view-id>/registration/registration.xhtml</to-view-id>
   		</navigation-case>
   </navigation-rule>
   
     <navigation-rule>
   		<from-view-id>*</from-view-id>
   		<navigation-case>
   			<from-outcome>to_user_profile</from-outcome>
   			<to-view-id>/portal/profile/personal.xhtml</to-view-id>
   		</navigation-case>
   </navigation-rule>

</faces-config>
